{
    "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "strict": true,
      "jsx": "preserve",
      "moduleResolution": "node",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      },
      "lib": ["esnext", "dom"],
      "experimentalDecorators": true
    },
    "include": ["src/**/*.ts", "src/**/*.vue", "src/**/*.d.ts"],
    "exclude": ["node_modules"]
  }
  